<Window
    x:Class="TheSystemRoboDkTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TheSystemRoboDkTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="900"
    Height="550"
    Closing="Window_Closing"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  Main Content  -->
        <Grid Grid.Row="0" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="502" />
                <ColumnDefinition Width="238" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  좌측 버튼들  -->
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Margin="5,48,5,5">
                <Button
                    Name="btnSelectStation"
                    Height="30"
                    Margin="0,0,0,8"
                    Click="btnLoadFile_Click"
                    Content="파일 로드" />
                <Button
                    Name="btnSelectRobot"
                    Height="30"
                    Margin="0,0,0,8"
                    Click="btnSelectRobot_Click"
                    Content="로봇 선택" />
                <Button
                    x:Name="btnMoveRobotHome"
                    Height="30"
                    Click="btnMoveRobotHome_Click"
                    Content="원점" />

            </StackPanel>

            <!--  Run Mode Group  -->
            <GroupBox
                Grid.RowSpan="2"
                Grid.Column="2"
                Margin="10,0,-50,0"
                Padding="0,0,0,0"
                VerticalAlignment="Bottom"
                Header="실행 스타일"
                Visibility="Collapsed">
                <StackPanel
                    Margin="10,5,0,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <RadioButton
                        Name="rad_RunMode_Simulation"
                        Margin="0,0,10,0"
                        Checked="rad_RunMode_Simulation_CheckedChanged"
                        Content="Simulation" />
                    <RadioButton
                        Name="rad_RunMode_Program"
                        Margin="0,0,10,0"
                        Checked="rad_RunMode_Program_CheckedChanged"
                        Content="Offline Programming" />
                    <RadioButton
                        Name="rad_RunMode_Online"
                        Margin="0,0,10,0"
                        Checked="rad_RunMode_Online_CheckedChanged"
                        Content="Run On Robot" />
                    <Button
                        Name="btnOLPdone"
                        Width="110"
                        Height="25"
                        Margin="10,0,0,0"
                        Click="btnOLPdone_Click"
                        Content="Generate Prog" />
                </StackPanel>
            </GroupBox>

            <!--  RoboDK Window Group  -->
            <GroupBox
                Grid.Row="1"
                VerticalAlignment="Bottom"
                Header="Display Mode"
                Visibility="Collapsed">
                <StackPanel>
                    <RadioButton
                        Name="rad_RoboDK_show"
                        Checked="rad_RoboDK_show_CheckedChanged"
                        Content="Show RoboDK" />
                    <RadioButton
                        Name="rad_RoboDK_hide"
                        Checked="rad_RoboDK_hide_CheckedChanged"
                        Content="Hide RoboDK" />
                    <RadioButton
                        Name="rad_RoboDK_Integrated"
                        Checked="rad_RoboDK_Integrated_CheckedChanged"
                        Content="Integrate RoboDK Window" />
                </StackPanel>
            </GroupBox>

            <!--  현재 위치 조회  -->

            <!--  조인트/포즈 입력 및 이동  -->
            <GroupBox
                Grid.RowSpan="1"
                Grid.Column="2"
                Margin="0,0,-60,11"
                Padding="0,0,0,0"
                Header="Move Robot">
                <StackPanel Orientation="Vertical">
                    <StackPanel
                        Margin="0,0,0,5"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Label
                            Width="130"
                            VerticalAlignment="Center"
                            Content="Joint Values (deg):" />
                        <TextBox
                            Name="txtJoints"
                            Width="180"
                            Height="25"
                            Margin="5,0,0,0"
                            Panel.ZIndex="-1"
                            Text="90 , -90 , 90 , 90 , 90 , -90" />
                        <Button
                            Name="btnMoveJoints"
                            Width="110"
                            Height="25"
                            Margin="10,0,0,0"
                            Click="btnMoveJoints_Click"
                            Content="Move to Joints" />
                    </StackPanel>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Label
                            Width="130"
                            VerticalAlignment="Center"
                            Content="Cartesian Position (mm,deg):" />
                        <TextBox
                            Name="txtPosition"
                            Width="180"
                            Height="25"
                            Margin="5,0,0,0"
                            Text="0 , -90 , 90 , 0 , 90 , 90" />
                        <Button
                            Name="btnMovePose"
                            Width="110"
                            Height="25"
                            Margin="10,0,0,0"
                            Click="btnMovePose_Click"
                            Content="Move to Position" />
                    </StackPanel>
                    <Button
                        x:Name="btnGetJoints"
                        Height="22"
                        Click="btnGetJoints_Click"
                        Content="Retrieve Current Position" />
                </StackPanel>
            </GroupBox>

            <!--  프로그램 실행  -->

            <!--  RoboDK 패널 (임시 Panel)  -->
            <Border
                Grid.RowSpan="4"
                Grid.Column="1"
                Background="LightGray">
                <Border
                    Name="border1"
                    Margin="10"
                    Background="LightGray"
                    BorderBrush="Black"
                    SizeChanged="border1_SizeChanged" />
            </Border>


            <GroupBox
                Grid.Row="2"
                Grid.RowSpan="2"
                Grid.Column="2"
                Margin="0,-22,-50,6"
                Header="Incremental Move">
                <StackPanel>
                    <!--  이동 기준 선택  -->
                    <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                        <RadioButton
                            x:Name="rad_Move_wrt_Reference"
                            Margin="0,0,10,0"
                            Content="Reference"
                            IsChecked="True" />
                        <RadioButton
                            x:Name="rad_Move_wrt_Tool"
                            Margin="0,0,10,0"
                            Content="Tool" />
                        <RadioButton x:Name="rad_Move_Joints" Content="Joint Move" />
                    </StackPanel>

                    <!--  스텝 입력  -->
                    <StackPanel
                        Margin="0,0,0,8"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Label
                            x:Name="lblstepIncrement"
                            VerticalAlignment="Center"
                            Content="Step (mm):" />
                        <TextBox
                            x:Name="numStep"
                            Width="80"
                            Margin="8,0,0,0"
                            VerticalContentAlignment="Center"
                            LostFocus="numStep_LostFocus"
                            PreviewTextInput="numStep_PreviewTextInput"
                            Text="10" />
                        <StackPanel Margin="2,0,0,0" Orientation="Vertical">
                            <Button
                                Width="25"
                                Height="18"
                                Click="btnStepUp_Click"
                                Content="▲" />
                            <Button
                                Width="25"
                                Height="18"
                                Click="btnStepDown_Click"
                                Content="▼" />
                        </StackPanel>

                    </StackPanel>

                    <!--  이동 버튼들  -->
                    <UniformGrid
                        Margin="0,0,0,8"
                        Columns="2"
                        Rows="6">
                        <Button
                            x:Name="btnTXpos"
                            Margin="2"
                            Click="btnTXpos_Click"
                            Content="+Tx" />
                        <Button x:Name="btnTYpos" Content="+Ty" />
                        <Button
                            x:Name="btnTXneg"
                            Margin="2"
                            Click="btnTXneg_Click"
                            Content="-Tx" />
                        <Button
                            x:Name="btnTYneg"
                            Margin="2"
                            Content="-Ty" />
                        <Button
                            x:Name="btnTZpos"
                            Margin="2"
                            Content="+Tz" />
                        <Button
                            x:Name="btnTZneg"
                            Margin="2"
                            Content="-Tz" />
                        <Button
                            x:Name="btnRXpos"
                            Margin="2"
                            Content="+Rx" />
                        <Button
                            x:Name="btnRXneg"
                            Margin="2"
                            Content="-Rx" />
                        <Button
                            x:Name="btnRYpos"
                            Margin="2"
                            Content="+Ry" />
                        <Button
                            x:Name="btnRYneg"
                            Margin="2"
                            Content="-Ry" />
                        <Button
                            x:Name="btnRZpos"
                            Margin="2"
                            Content="+Rz" />
                        <Button
                            x:Name="btnRZneg"
                            Margin="2"
                            Content="-Rz" />
                    </UniformGrid>
                </StackPanel>
            </GroupBox>

        </Grid>

        <!--  Status Bar  -->
        <StatusBar
            Name="statusStrup1"
            Grid.Row="1"
            VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock
                    Name="notifybar"
                    FontWeight="Bold"
                    Text="Status: " />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
